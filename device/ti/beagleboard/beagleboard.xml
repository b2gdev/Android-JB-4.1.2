<!-- TinyHAL configuration file for TCBIN -->
<tinyhal>

   <!-- We are able to have most of our routing static so do that -->
<path>

<!-- Common inputs -->
        <ctl name="ADCL Mux" val="0" />
        <!-- ctl name="AIF1ADC1L DRC Switch" val="1" / -->
        <ctl name="AIF1ADC1L Mixer ADC/DMIC Switch" val="1" />
        <ctl name="AIF1ADC1R Mixer ADC/DMIC Switch" val="1" />

<!-- External Mic -->
        <ctl name="IN1L PGA IN1LP Switch" val="1" />
        <ctl name="IN1L PGA IN1LN Switch" val="1" />
        <ctl name="IN1L Volume" val="20" />
        <ctl name="MIXINL IN1L Switch" val="1" />
        <ctl name="MIXINL IN1L Volume" val="1"/>

<!-- Internal Analog Mic -->
        <ctl name="IN1R PGA IN1RP Switch" val="1" />
        <ctl name="IN1R PGA IN1RN Switch" val="1" />
        <ctl name="IN1R Volume" val="22" />
        <ctl name="MIXINR IN1R Switch" val="1" />
        <ctl name="MIXINR IN1R Volume" val="1"/>

<!-- from 3G-->
        <ctl name="IN2L PGA IN2LP Switch" val="1" />
        <ctl name="IN2L PGA IN2LN Switch" val="1" />
        <ctl name="IN2L Volume" val="30" />
        <ctl name="MIXINL IN2L Switch" val="1" />
        <ctl name="Left Sidetone" val="0" />
        <ctl name="DAC1 Left Sidetone Volume" val="4" />
        <ctl name="DAC1 Right Sidetone Volume" val="4" />

<!-- Speaker/Headphone -->
        <ctl name="DAC1L Mixer AIF1.1 Switch" val="1" />
        <ctl name="DAC1R Mixer AIF1.1 Switch" val="1" />
        

<!-- Headphone -->
     <ctl name="Left Headphone Mux" val="1" />
         <ctl name="Right Headphone Mux" val="1" />

<!-- Speaker -->
     <ctl name="Left Output Mixer DAC Switch" val="1" />
     <ctl name="Right Output Mixer DAC Switch" val="1" />
     <ctl name="SPKL Output Switch" val="1" />
     <ctl name="SPKR Output Switch" val="1" />

<!-- to 3G -->
        <ctl name="LINEOUT1 Volume" val="1" />
        <ctl name="LINEOUT1N Switch" val="1" />
        <ctl name="LINEOUT1N Mixer Left Output Switch" val="1" />
        <ctl name="LINEOUT1P Switch" val="1" />
        <ctl name="LINEOUT1P Mixer Left Output Switch" val="1" />
        <ctl name="Left Output Mixer IN1L Switch" val="1" />
        <ctl name="Left Output Mixer IN1R Switch" val="1" />
</path>

<device name="speaker">
   <path name="on">
        <ctl name="Speaker Boost Volume" val="7" />
        <ctl name="Speaker Mixer Volume" val="3" />
   </path>
   <path name="off">
        <ctl name="Speaker Boost Volume" val="0" />
        <ctl name="Speaker Mixer Volume" val="0" />
   </path>
</device>

<device name="headphone">
   <path name="on">
        <ctl name="Headphone Switch" val="1" />
        <ctl name="Headphone Volume" val="45" />
   </path>
   <path name="off">
        <ctl name="Headphone Volume" val="0" />
        <ctl name="Headphone Switch" val="0" />
   </path>
</device>

<device name="builtin-mic">
  <path name="on">
     <ctl name="IN1R Switch" val="1" />
  </path>
  <path name="off">
     <ctl name="IN1R Switch" val="0" />
  </path>
</device>

<device name="headset">
  <path name="on">
        <ctl name="IN1L Switch" val="1" />
        <ctl name="Right Output Mixer IN1L Switch" val="1" />
        <ctl name="MIXINR Output Record Volume" val="7"/>
  </path>
  <path name="off">
     <ctl name="IN1L Switch" val="0" />
     <ctl name="Right Output Mixer IN1L Switch" val="0" />
         <ctl name="MIXINR Output Record Volume" val="0"/>
  </path>
</device>

<device name="3g-output">
  <path name="on">
    <ctl name="IN2L Switch" val="1" />
    <ctl name="DAC1R Mixer Left Sidetone Switch" val="1" />
        <ctl name="DAC1L Mixer Left Sidetone Switch" val="1" />
  </path>
  <path name="off">
    <ctl name="IN2L Switch" val="0" />
    <ctl name="DAC1R Mixer Left Sidetone Switch" val="0" />
        <ctl name="DAC1L Mixer Left Sidetone Switch" val="0" />
  </path>
</device>

<device name="mute_out">
  <path name="on">
     <ctl name="DAC1 Switch" val="0" />
  </path>
  <path name="off">
     <ctl name="DAC1 Switch" val="1" />
  </path>
</device>

</tinyhal>
